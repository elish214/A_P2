<UserControl x:Class="GUI.controls.MazeBoard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GUI.controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions/>
        <Viewbox Grid.Row="0" Grid.Column="0">
            <Canvas x:Name="MazeCanvas" Width="300" Height="300">
                <Border BorderBrush="Purple" BorderThickness="3"/>
                <Rectangle x:Name="player" Height="20" Canvas.Left="157" Stroke="White" Canvas.Top="97" Width="20" Canvas.ZIndex="100">
                    <Rectangle.Fill>
                        <ImageBrush ImageSource="/GUI;component/Resources/mario.jpg"/>
                    </Rectangle.Fill>
                </Rectangle>
                
            </Canvas>
        </Viewbox>
    </Grid>
</UserControl>
